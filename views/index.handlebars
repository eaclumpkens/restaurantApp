<h1>Burger App</h1>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="burgerType" name="name" placeholder="burger name">
    <button type="submit" class="btn btn-primary btn-lg">Add Burger</button>
  </div>

</form>

<h2>Qued Up</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Consumed</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/if}}
  {{/each}}
</ul>
